<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_hotf"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <LinearLayout
                android:id="@+id/rg_hotf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vp_hotf"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal" />


            <com.bawei.feng.jufan.view.MyListView
                android:id="@+id/lv_hotf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/vp_hotf"></com.bawei.feng.jufan.view.MyListView>

            <View
                android:layout_below="@id/lv_hotf"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
